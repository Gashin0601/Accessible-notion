{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "0.1.0",
  "description": "__MSG_extDescription__",
  "default_locale": "ja",
  "permissions": [
    "storage",
    "management",
    "scripting",
    "webNavigation",
    "tabs"
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*",
        "https://*.notion.site/*"
      ],
      "js": ["content/main.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://www.notion.so/*",
    "https://*.notion.site/*"
  ],
  "action": {},
  "background": {
    "service_worker": "background/service-worker.js"
  }
}
