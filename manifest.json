{
  "manifest_version": 3,
  "name": "Notion Accessibility Enhancer",
  "version": "1.0",
  "description": "Notionをスクリーンリーダーでより使いやすくするための拡張機能です。",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.notion.so/*",
    "*://notion.so/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.notion.so/*",
        "*://notion.so/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
} 